@model ShopRosKvartal.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Восстановление доступа";
}

<section id="blog" class="container">
    <div class="center">
        <h1>@ViewBag.Title</h1>
        <p class="lead">Введите email и логин вашего аккаунта</p>
        <br />
        <hr />
    </div>

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 col-md-4 control-label" })
            <div class="col-md-4 col-sm-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-sm-2 col-md-4 control-label" })
            <div class="col-md-4 col-sm-8">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
                @Html.ValidationSummary("", new { @class = "text-danger text-center" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-4 col-sm-offset-2 col-sm-8">
                <input type="submit" class="btn btn-default btn-block" value="Восстановить" />
            </div>
        </div>

    }

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
