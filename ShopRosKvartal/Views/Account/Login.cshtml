@using ShopRosKvartal.Models

@model LoginViewModel

@{
    ViewBag.Title = "Вход";
}

<section id="blog" class="container">
    <div class="center">
        <h1>@ViewBag.Title</h1>
        <p class="lead">Введите логин и пароль для входа в ваш аккаунт</p>
        <br />
        <hr />
    </div>

    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-sm-2 col-md-4 control-label" })
                <div class="col-md-4 col-sm-8">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 col-md-4 control-label" })
                <div class="col-md-4 col-sm-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-4 col-sm-offset-2 col-sm-8">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    @Html.ValidationSummary("", new { @class = "text-danger text-center" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-4 col-sm-offset-2 col-sm-8">
                    <div class="row">

                        <div class="col-sm-6 col-xs-12">
                            <input type="submit" value="Войти" class="btn btn-success btn-block" />
                            <br />
                        </div>

                        <div class="col-sm-6 col-xs-12">
                            @Html.ActionLink("Зарегистрироваться", "Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, new { @class = "btn btn-default btn-block" })
                            <br />
                        </div>

                    </div>
                </div>
            </div>

            <hr />

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <p>
                        <br />
                        Забыли свой пароль? - Перейдите по @Html.ActionLink("ссылке", "ForgotPassword", "Account", null, null), чтобы восстановить доступ к вашему аккаунту.
                    </p>
                </div>
            </div>
        }
    </section>

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
